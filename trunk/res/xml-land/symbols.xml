<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="19.5%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="20%p"
    >

    <Row android:rowEdgeFlags="top"> 
        <Key android:codes="49" android:keyLabel="@string/symbols_for_1" android:horizontalGap="6%p" android:keyEdgeFlags="left"/>
		<Key android:codes="50" android:keyLabel="@string/symbols_for_2"/>
        <Key android:codes="51" android:keyLabel="@string/symbols_for_3"/>
        <Key android:codes="42" android:keyLabel="@string/symbols_for_ast"/>
        <Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_delete" 
                android:keyWidth="15%p" android:keyEdgeFlags="right"
                android:isRepeatable="true" 
                android:horizontalGap="2%p"
        />
    </Row>
    
    <Row>
        <Key android:codes="52" android:keyLabel="@string/symbols_for_4"
        	android:horizontalGap="6%p" android:keyEdgeFlags="left"/>        	
        <Key android:codes="53" android:keyLabel="@string/symbols_for_5"/>
        <Key android:codes="54" android:keyLabel="@string/symbols_for_6"/>
        <Key android:codes="48" android:keyLabel="@string/symbols_for_0"/> 
        <Key android:codes="-1" android:keyIcon="@drawable/sym_keyboard_shift" 
                android:keyWidth="15%p" android:isModifier="true" android:horizontalGap="2%p"
                android:keyEdgeFlags="right"/>
    </Row>
    
    <Row android:verticalGap="4%p">
        <Key android:codes="55" android:keyLabel="@string/symbols_for_7"
        	android:horizontalGap="6%p" android:keyEdgeFlags="left"/>
        <Key android:codes="56" android:keyLabel="@string/symbols_for_8"/> 
        <Key android:codes="57" android:keyLabel="@string/symbols_for_9"/>
        <Key android:codes="32" android:keyIcon="@drawable/sym_keyboard_space"/>
        <Key android:codes="10" android:keyIcon="@drawable/sym_keyboard_return" 
        		android:horizontalGap="2%p"
                android:keyWidth="15%p" android:keyEdgeFlags="right"/>

    </Row>
      
</Keyboard>
    
